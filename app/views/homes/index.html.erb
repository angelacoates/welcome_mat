<div class="page-header">
  <%= link_to new_home_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Home
  <% end %>
  <h1 Listing>homes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zipcode</th>
        <th>Bedrooms</th>
        <th>Bathroms</th>
        <th>Squarefoot</th>
        <th>Price</th>
        <th>Description</th>
        <th>Year built</th>
        <th>Created by</th>
        <th>Image data</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @homes.each do |home| %>
      <tr>
        <td><%= home.address %></td>
        <td><%= home.city %></td>
        <td><%= home.state %></td>
        <td><%= home.zipcode %></td>
        <td><%= home.bedrooms %></td>
        <td><%= home.bathroms %></td>
        <td><%= home.squarefoot %></td>
        <td><%= home.price %></td>
        <td><%= home.description %></td>
        <td><%= home.year_built %></td>
        <td><%= home.created_by %></td>
        <td><%= image_tag(home.image_url(:medium)) %></td>
        <td>
          <%= link_to home do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_home_path(home) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to home, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
